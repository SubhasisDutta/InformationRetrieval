CREATE TABLE table_name (column_name1 data_type(size) [primary key|not null],column_name2 data_type(size) [primary key|not null],column_name3 data_type(size) [primary key|not null]);


CREATE TABLE Zoo (
Animal_ID INT PRIMARY KEY,
Name VARCHAR(20),
Sector SHORT INT
);

CREATE TABLE Zoo(
Animal_ID INT PRIMARY KEY,
Name VARCHAR(20) ,
Type VARCHAR(20) NOT null,
Sector SHORT INT,
Length long INT,
weight float,
cost_per_year double NOT null,
popular byte NOT null
);

